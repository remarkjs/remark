{
  "private": true,
  "license": "MIT",
  "homepage": "http://remark.js.org",
  "repository": "https://github.com/wooorm/remark",
  "bugs": "https://github.com/wooorm/remark/issues",
  "devDependencies": {
    "bail": "^1.0.0",
    "browserify": "^13.0.0",
    "bundle-collapser": "^1.2.1",
    "camelcase": "^3.0.0",
    "chalk": "^1.1.3",
    "clone": "^1.0.2",
    "escodegen": "^1.7.0",
    "esmangle": "^1.0.0",
    "esprima": "^2.6.0",
    "execa": "^0.4.0",
    "extend": "^3.0.0",
    "has": "^1.0.1",
    "lerna": "2.0.0-beta.20",
    "mdast-util-assert": "^1.0.0",
    "mdast-util-compact": "^1.0.0",
    "nyc": "^8.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-toc": "^3.0.0",
    "remark-validate-links": "^4.0.0",
    "tape": "^4.5.1",
    "uglifyify": "^3.0.1",
    "unist-builder": "^1.0.2",
    "unist-util-remove-position": "^1.1.0",
    "unist-util-visit": "^1.1.0",
    "vfile": "^1.4.0",
    "xo": "^0.16.0"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build-md": "packages/remark-cli/cli.js . --frail --quiet",
    "build-bundle": "node script/build-bundle.js",
    "build": "npm run build-md && npm run build-bundle",
    "lint": "xo",
    "test-api": "node test/api",
    "test-api-extensive": "TEST_EXTENDED=true node test/api",
    "test-cli": "node test/cli.js",
    "test-coverage": "nyc --reporter lcov tape test",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "rules": {
      "eqeqeq": "off",
      "guard-for-in": "off",
      "max-lines": "off",
      "max-depth": "off",
      "complexity": "off",
      "no-eq-null": "off"
    },
    "ignores": [
      "remark.js"
    ]
  }
}
